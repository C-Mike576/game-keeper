<h1>Create Player</h1>

<% if @player.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being created:</h2>
 
    <ul>
    <% @player.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @player do |f| %>
    <%= f.label :name, "Nickname:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.submit "Create Player" %> 
<% end %>