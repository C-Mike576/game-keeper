<h1>New Note</h1>

<% if @note.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being created:</h2>
 
    <ul>
    <% @note.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @note, local:true do |f| %>
    <%= f.label :gamemaster_id, "Who is sending the message" %>
    <%= f.collection_select(:gamemaster_id, current_user.gamemasters, :id, :name, prompt: true) %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>
    <%= f.label :player_id, "Who is receiving the message" %>
    <%= f.collection_select(:player_id, Player.all, :id, :name, prompt: true) %>
    <br>
    <%= f.submit "Send Note" %>
<% end %>