<h1>Sign up!</h1>


<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_with model: @user, local: true do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Sign Up" %>
<% end %>